<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered People Secrets!</h1>
    
      <% if (usersWithSecrets.length === 0) { %>
        No Secret yet. Please submit one.
      <% } else { %>
        <% usersWithSecrets.forEach((user) => { %>
          <p class="secret-text">
            <%= user.secret %>
          </p>
        <% }) %>
      <% } %>
    <hr>
    
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

<%- include('partials/footer') %>
